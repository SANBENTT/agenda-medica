extends layout

block content
  h1 Edit Appointment

  form(action=`/appointments/update/${appointment.id}`, method="POST")
    .form-group
      label(for="date") Date:
      input(type="date" name="date" id="date" value=appointment.appointment_date required)

    .form-group
      label(for="time") Time:
      input(type="time" name="time" id="time" value=appointment.appointment_time required)

    .form-group
      label(for="doctor_id") Doctor ID:
      input(type="number" name="doctor_id" id="doctor_id" value=appointment.doctor_id required)

    .form-group
      label(for="patient_name") Patient Name:
      input(type="text" name="patient_name" id="patient_name" value=appointment.patient_name required)

    .form-group
      label(for="patient_dni") Patient DNI:
      input(type="text" name="patient_dni" id="patient_dni" value=appointment.patient_dni required)

    .form-group
      label(for="reason") Reason:
      input(type="text" name="reason" id="reason" value=appointment.reason required)

    .form-group
      label(for="status") Status:
      select(name="status" id="status" required)
        option(value="Scheduled", selected=appointment.status == "Scheduled") Scheduled
        option(value="Completed", selected=appointment.status == "Completed") Completed
        option(value="Canceled", selected=appointment.status == "Canceled") Canceled

    button(type="submit") Update Appointment
