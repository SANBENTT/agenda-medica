extends layout

block content
    h1 Gestión de Médicos
    table
        thead
            tr
                th ID
                th Nombre
                th Número de Licencia
                th Especialidades
                th Estado
                th Acciones
        tbody
            each doctor in doctors
                tr
                    td= doctor.id
                    td= doctor.name
                    td= doctor.license_number
                    td= doctor.specialties
                    td= doctor.status
                    td
                        a(href=`/doctors/delete/${doctor.id}`, class="btn btn-danger") Borrar
                        a(href=`/doctors/edit/${doctor.id}`, class="btn btn-primary") Editar
    h2 Agregar Médico
    form(action='/doctors/add', method='POST')
        input(type='text', name='name', placeholder='Nombre', required)
        input(type='text', name='license_number', placeholder='Número de Licencia', required)
        input(type='text', name='specialties', placeholder='Especialidades', required)
        select(name='status')
            option(value='active') Activo
            option(value='inactive') Inactivo
        button(type='submit') Agregar Médico

extends layout

block content
  h1 Editar Cita

  form(action=`/appointments/update/${appointment.id}`, method="POST")
    .form-group
      label(for="date") Fecha:
      input(type="date" name="date" id="date" value=appointment.appointment_date required)

    .form-group
      label(for="time") Hora:
      input(type="time" name="time" id="time" value=appointment.appointment_time required)

    .form-group
      label(for="doctor_id") ID del Médico:
      input(type="number" name="doctor_id" id="doctor_id" value=appointment.doctor_id required)

    .form-group
      label(for="patient_name") Nombre del Paciente:
      input(type="text" name="patient_name" id="patient_name" value=appointment.patient_name required)

    .form-group
      label(for="patient_dni") DNI del Paciente:
      input(type="text" name="patient_dni" id="patient_dni" value=appointment.patient_dni required)

    .form-group
      label(for="reason") Motivo:
      input(type="text" name="reason" id="reason" value=appointment.reason)

    .form-group
      label(for="status") Estado:
      select(name="status")
        option(value="reserved", selected=appointment.status === 'reserved') Reservado
        option(value="confirmed", selected=appointment.status === 'confirmed') Confirmado
        option(value="canceled", selected=appointment.status === 'canceled') Cancelado
        option(value="absent", selected=appointment.status === 'absent') Ausente

    button(type="submit") Actualizar Cita